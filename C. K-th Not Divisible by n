void solve() {
    int n, k;
    inp(n);
    inp(k);
 
    ll a=floor((double) (k-1)/(n-1));
    ll s=k+a;
    
 
    cout << s << '\n';
}
 
    
 
signed main() {
    fast;cout<<fixed;cout<<setprecision(14);
    #ifndef ONLINE_JUDGE
        freopen("inp.txt", "r", stdin);
        freopen("out.txt", "w", stdout);
    #endif
    int test = 1 ;  inp ( test );
    while ( test -- ) solve();
    
 
    
    
    
    return 0;
}
