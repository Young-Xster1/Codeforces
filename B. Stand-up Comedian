void solve() {
    int a1, a2, a3, a4;
        std::cin >> a1 >> a2 >> a3 >> a4;
 
        if (a1 == 0) {
            std::cout << 1 << std::endl;
        } else {
            std::cout << a1 + std::min(a2, a3) * 2 + std::min(a1 + 1, std::abs(a2 - a3) + a4) << std::endl;
        }
    
 
}
 
signed main() {
    fast;cout<<fixed;cout<<setprecision(14);
